---
const {url,title,description} = Astro.props
---

<a href={url} class="article-link">
    <article>
        <h1>{title}</h1>
        <p>{description}</p>
    </article>
</a>
<style>
    .article-link {
        text-decoration: none;
        color: inherit;
        display: block;
        padding: 0;
        margin: auto 10%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .article-link:hover {
        transform: translateY(-5px);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }
    .article-link article {
        cursor: pointer;
    }
    article {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: 2rem auto;
        padding: 1rem;
        width: 80%;
        transition: background-color 0.3s ease;
    }
    article:hover {
        background-color: #f9f9f9;
    }
    h1 {
        color: #333;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }
    p {
        color: #666;
        font-size: 1.2rem;
        line-height: 1.5;
        font-style: italic;
        opacity: 0.8;
    }
    </style>